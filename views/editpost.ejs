<%- include("partials/header.ejs") %>

<div class="posts">
  <div class="new-post-container">
    <div>
      <h1 class="post-description">Edit your Post:</h1>
    </div>
    <div class="form">
      <form action="/edit/<%= post.postId %>?_method=PUT" method="POST">
        <div class="form-title">
          <input type="text" class="form-text" name="postTitle" value="<%= post.title %>">
        </div>
        <div class="form-body">
          <input type="text" class="form-text" name="postBody" value="<%= post.body %>">
        </div>
        <button type="submit">Edit</button>
      </form>
    </div>
  </div>
</div>
