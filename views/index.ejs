<%- include("partials/header.ejs") %>
<div class="posts">
  <% if (posts.length > 0) { %>
    <% for(var i = 0; i < posts.length; i++) { %>
      <div class="post">
        <div>
          <p><%= posts[i].title %></p>
        </div>
        <div>
          <p><%= posts[i].body %></p>
        </div>
        <div>
          <a href="/post/<%= posts[i].postId %>/edit">
            <button>Edit</button>
          <form action="/post/<%= posts[i].postId %>?_method=DELETE" method="POST">
            <button type="submit">">Delete</button>
          </form>
        </div>
      </div>
    <% } %>
  <% } else { %>
      <h1 style="color: #17191B">There are no posts yet, Create one!</h1>
  <% } %>
</div>
</body>
</html>